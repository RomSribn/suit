.button
    display block
    padding 0
    outline none
    border none
    background none
    box-shadow none
    transition background-color .25s, color .25s, opacity .25s
    cursor pointer
    border-radius 0
    white-space nowrap

    &.disabled
        cursor default
        opacity .5
        user-select none

    &.black
        width 13.3333rem
        line-height 2.6666rem
        border 2px solid #000
        font-size 1rem
        font-weight 500
        line-height 2.4rem
        text-align center
        color #fff
        background-color #000
        text-transform uppercase
        overflow hidden
        transition background-color .35s, color .35s, border .35s

        &:hover
            background #eceeee
            border-color #eceeee
            color #000

        &.invert
            color black
            background-color white
            border-color white

            &:hover
                color white
                background-color black
                border-color black

    &.white
        position relative
        display block
        background transparent
        padding .5333rem 0
        width 13.3333rem
        height 2.4rem
        font-size 1rem
        text-transform uppercase
        text-align left
        color #000
        line-height 1.2
        font-weight 500
        text-align center

        &.invert
            color white

            & .rect--1
                stroke: #b7b7b7

            & .rect--2
                stroke: white

    &:not(.disabled).white:hover .rect--2
            stroke-dashoffset 0

.frame
    position absolute
    top -2px
    left -2px
    width calc(100% + 4px)
    height calc(100% + 4px)
    z-index 2

    .rect
        position absolute
        fill none
        stroke #9eadae
        stroke-width 3px
        -webkit-transition all .55s ease-out
        transition all .55s ease-out

        &--2
            stroke #000
            stroke-width 3px
            stroke-dasharray 75% 120%
            stroke-dashoffset -75%

        &--1
            stroke #b7b7b7
            stroke-width 3px


@media only screen and (max-width:  1140px)
    .button
        &.black
            width 10.5rem
        &.white
            width 10.5rem
@media only screen and (max-width: 768px) and (max-width: 1024px) and (orientation: portrait) 
    .button
        &.black
            width 8.5rem
        &.white
            width 8.5rem
    .swiper-popup-container
        .button
            &.black
                width 9.5rem

@media only screen and (max-width:  991px)
    .button-bar
        &.white
            font-size 0
            padding 0

        &:active .rect--2,
        &:hover .rect--2
            stroke-dasharray 170% 250%
            stroke-dashoffset -130%

        &:active:after,
        &:hover:after
            border-right-color #000


    .rect--2
        stroke-dasharray 180% 250%
        stroke-dashoffset -70%

@media only screen and (max-width:  450px), only screen and (max-height: 450px)
    .button
        &.black
            width: calc(100% + 4px);
            margin-left: -2px;
            font-weight 700
            text-align center
            color #000
            background-color #fff
        &.white
            width 100%;
