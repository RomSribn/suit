.confirm-popup
    &__wrapper
        display flex
        align-items center
        justify-content center
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        text-align center

    &__title
        font-weight 500
        text-transform uppercase
        margin: 0 0 2rem 0

    &__text
        margin: 0 0 2rem 0

    &__controls
        display flex
        align-items center
        justify-content: center;

        &-item:not(.no-margin)
            margin-right: 2.333rem;
