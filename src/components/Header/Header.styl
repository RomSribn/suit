.application
  & > .header
    font-family font-header
    position relative
    height 59px
    width 100%
    background-color black
    color white
    line-height 1
    .container
      position relative
      height 100%
      max-width 1230px
      margin 0 auto
      display flex
      justify-content space-between
      flex-flow row nowrap
    .logotype,.user
      display block
      height 100%
      width 170px
      font-size 110%
      text-transform uppercase
      color white
    .logotype-content
      font-family font-header
      height 100%
      display flex
      justify-content space-between
      align-items center
      align-content center
      flex-flow row nowrap
      img
        height 100%
    .user
      display flex
      justify-content space-between
      align-items center
      align-content center
      flex-flow row nowrap
      color gray
      &_lang
        border 0
        box-shadow none
        background-color transparent
        color gray
        text-transform uppercase
      &_cart
        &-img
          display block
    .nav
      height 100%
      .list
        position relative
        height 100%
        display flex
        flex-flow row nowrap
        justify-content space-between
        align-items center
        list-style none
        text-transform uppercase
        &-item
          position relative
          border-bottom 1px dashed white
          cursor pointer
          &_content
            line-height 27px
            letter-spacing 2px
            font-size 90%;
        &-item:not(:first-child)
          margin-left 20px


.dropdown
  z-index 10
  opacity 0
  visibility hidden
  transition all 0.5s ease
  position absolute
  background #fff
  box-shadow 0 1px 2px rgba(0,0,0,0.25)
  margin-top 16px
  min-width 192px
  left 50%
  transform translateX(-50%);
  letter-spacing normal
  &::before
    content: ''
    position absolute
    left 50%
    top 0
    margin -9px 0 0 -9px
    border-left: 9px solid transparent
    border-right: 9px solid transparent
    border-bottom: 9px solid white
  &:hover
    opacity 1
    visibility visible
  &__list
    list-style none
    &-item
      display block
      height auto
      border-bottom 1px solid gray
      &_content
        font-size 100%
        color black
        padding 0 20px
        line-height 40px
      &:hover &_content
        color bronze
