.application
  .header
    font-family font-header

.application
  & > .header
    position relative
    height 59px
    width 100%
    background-color black
    color white
    .container
      position relative
      height 100%
      width 1230px
      margin 0 auto
      display flex
      justify-content space-between
      flex-wrap row nowrap
    .nav
      height 100%
      .list
        height 100%
        display flex
        flex-flow row nowrap
        justify-content space-between
        align-items center
        list-style none
      //font
        text-transform uppercase
        .list-item
          line-height 1
          padding 15px

.logotype, .controls
  display block
  height 100%
  width 170px
//font
  font-size 120%
  text-transform uppercase
  color white

.logotype
  &-content
    display flex
    justify-content space-between
    align-items center
    align-content center
    flex-flow row nowrap

header
  .controls
    display flex
    justify-content space-between
    align-items center
    align-content center
    flex-flow row nowrap
  //font
    color gray
    button.lang
      border 0
      box-shadow none
      background-color transparent
      color gray
      text-transform uppercase
      font-size 90%
