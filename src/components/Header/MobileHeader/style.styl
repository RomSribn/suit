.headerWrapper {
  height: 35px;
  width: 100%;
  box-sizing: border-box;
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
}

.open-menu {
  border: none;
  background: transparent;
  height: 100%;

  .open-element-img {
    height: 100%;  
  }
}

.content-wrapper {
  color: #8a8a8a;
  text-align: right;
  min-width: 50%;

  .menu-title {
    font-weight: 400;
    text-transform: uppercase;
  }
}

.decorative-element-img {
  height: 100%;
  border-left: 2px solid #8a8a8a;
  padding-left: 20px;
  display none
}

@media only screen and (max-width: 450px), only screen and (max-height: 450px) {
  .headerWrapper {
    height: 30px;
    margin: auto 0;
    width: 100%;
  } 
}