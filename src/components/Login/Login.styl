.login-container
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  z-index 1000
  display flex
  align-items center
  justify-content center
  .login
    position relative
    width 988px
    height 480px
    width: 68rem
    height: 33rem
    background url('https://pp.userapi.com/c834400/v834400579/3b45b/Qyg4hrop6uo.jpg') no-repeat center
    background-size cover
    padding 5.25rem
    color white
    & > div.text
      text-align right
      position absolute
      bottom 1.04rem
      right 5.25rem
      font-size 90%
      color gray-for-placeholder
    button.exit
      position absolute
      top 13px
      right 15px
      box-shadow none
      background-color transparent
      color white
      font-size 100%
      line-height 1
      border 1px solid white
      height 25px
      width 25px
      border-radius 100%
    div.left-side
      position relative
      width 50%
      height 100%
      display flex
      flex-direction column
      h2.title
        color #fafafa
        font-size: 1rem
        font-weight: 500
        text-transform: uppercase
        line-height: 1
      p.additional-info
        margin 1.32rem 0
        font-size .86666rem
        line-height 1.5rem
        color #c2c2c2
        .link
          color: inherit
        .forgot
          color red
      .login_input
        width 100%
        padding 13px 25px
        font-size .86666rem
        margin 0.6rem 0
        border 1px solid white
        background-color transparent
        color white
        &::placeholder
          opacity 1
        &:focus
          outline none
      button.login_input
        background-color lightgray
        margin 20px 0
        cursor pointer

      .row
        display flex
        justify-content space-between
        align-items center
        align-content center
        margin-top 1.5rem
        .remember
          display flex
          align-items center
          cursor pointer
          .checkbox
            display inline-block
            width 1.25rem
            height 1.25rem
            border 1px solid white
            background-color transparent
            margin-right 10px
            .check
              visibility hidden
              background gray-for-placeholder
              height 100%
              width 100%
            &--checked
              background-color white
              .check
                visibility visible

      .controlls-bar
        position absolute
        width 100%
        bottom 0
        display flex
        align-items center
        justify-content space-between

      label.cb-text
        padding-top 2px
        font-size .86666rem