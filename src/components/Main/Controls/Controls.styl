.controls
  display flex
  flex-flow row nowrap
  justify-content center
  align-items center
  position relative
  height 57px
  width 113px
  margin 0 auto
  border-bottom 0

  .circle
    display flex
    justify-content flex-start
    align-items center
    align-content center
    height 27px
    width 27px
    border-radius 27px
    border 1px solid transparent
    transition all .3s
    overflow hidden
    position absolute
    z-index 1
    cursor pointer
    &:hover
      width 100%
      z-index 10
      .text
        display block
    img
      height 27px
      width 27px
      border-radius 27px
      border 1px solid transparent
      border-left 0
    .text
      display none
      text-transform uppercase
      font-size 90%
      text-align center
      width 100%
      padding-right 5px
      font-family font-header

  // Modificators

  &--white
    .circle
      color black
      border-color black
      &:hover
        background-color white
      img
        border-color black

  &--black
    .circle
      background-color black
      color white
      border-color white
      &:hover
        background-color black
      img
        border-color white

  .left
    left 0
  .center
    margin 0 auto
  .right
    right 0
