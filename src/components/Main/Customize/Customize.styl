.main
  display flex
  flex-direction column
  position relative
  height calc(100% - 57px);
  .container
    display flex
    flex-flow row nowrap
    width 100%
    height 100%

@keyframes slideFromLeft
  0%
    transform translateX(-100%)
    display none
  1%
    display flex
  100%
    transform translateX(0)

.customize
  display flex
  justify-content flex-start
  height 100%
  width 50vw
  position relative
  align-items center
  // background url("http://www.fudgegraphics.com/downloads/fabric/fudgegraphics-creased-fabric-10.jpg")
  background-size cover
  .customize__controls
    display flex
    flex-flow column nowrap
    justify-content space-between
    height 100%
    width 276px
    padding 0 27px
    background-blend-mode multiply
    background-color rgba(245, 245, 245, 0.80)
    animation slideFromLeft .3s
    .search
      width 100%
      height 30px
      margin 10px 0 calc(20px + 1vh) 0


.customize__image
  position absolute
  z-index -1
.customize__image--cloth //контейнер для ткани (на бекграунде правого блока)
  height 100%
.customize__image--wear //контейнер для трех изображений одежды
  opacity 1
  transition all .3s
  z-index 1
  background-color white-transparent
  height 100%
  width calc(50vw - 276px)
  left 276px
  display flex
  align-items center
  align-content: center
  flex-flow column nowrap
  padding-top 40px

  .about-wear
    display flex
    flex-flow column nowrap
    align-items center
    width 75%
    .caption
      text-transform uppercase
      font-family font-bold
      color black
      font-weight 400
    .fa-eye
      color gray-for-placeholder
      font-size 130%
      padding 5px
      cursor pointer
    .fa-eye--active
      color black
    .desc
      line-height 1.35
      font-family font-default
      font-weight 400
      color black
      font-size 85%

  .controls
    position absolute
    bottom 0
    height 57px

  //ужас верстальщика
  .wear-images
    display flex
    justify-content space-between
    align-items center
    align-content: center
    flex-flow column nowrap
    width 75%
    height 65%
    margin-bottom 60px
    .top //верхний блок (большое изображение)
      display block
      width 100%
      height 65%
      img
        height 100%
        width auto
        margin 0 auto
        display block //иначе не совпадали размеры дива и изображения
    .bottom
      display flex
      flex-flow row nowrap
      justify-content space-between
      height 34%
      width 100%
      position relative
      img
        height 100%
        width auto

@import "Search/Search.styl"
@import "CustomizeOrderData/OrderData.styl"

.list-container
  display flex
  position relative
  height 70%
  padding 0 4px
  &--hidden
    display none

.list
  overflow-y auto
  width 100%
  height 100%
  text-align center
  &::-webkit-scrollbar
    width 5px
    height 5px
    &-thumb
      background-color gray-for-placeholder
      border-radius 5px

.list-container > .list > .list_item
  & > .list
    padding 7px 0
  &:not(:last-child)
    margin-bottom 5px

.list_item
  display block
  & > .list
    display none
  &--opened
    & > .list
      display block
    .list_header
      transition all .3s
      color black
      .list__header_icons
        .fa-angle-double-up
          transform rotate(180deg)

.radio
  display flex
  flex-flow row nowrap
  align-items flex-start
  justify-content flex-start
  align-content center
  margin 0 !important
  position relative
  &--checked
    .radio_indicator
      background-color black
  .radio_indicator
    position relative
    display flex
    min-height 8px
    min-width 8px
    border 1px solid black
    border-radius 100%
    margin-right 5px
    top 4px
  .radio_name
    font-family font-default
    font-size 90%
    text-align left


.list_header
  width 100%
  display flex
  flex-flow row nowrap
  justify-content space-between
  align-items center
  color gray

.list__header_heading
  font-size 85%
  font-family font-bold
  text-transform uppercase
  line-height 1

.list__header_icons
  font-size 110%
  display flex
  flex-flow row nowrap
  justify-content space-between

.list__header_icons .fa
  margin 0 5px
  cursor pointer

button.items-loading
  border 1px solid black
  background white
  margin-top 10px
  padding 5px
  width 100%
  transition all .2s
  cursor pointer
  &:hover
    color white
    background black