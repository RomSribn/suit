.main
  display flex
  flex-direction column
  position relative
  height calc(100% - 57px);
  .container
    display flex
    flex-flow row nowrap
    width 100%
    height 100%

.customize
  display flex
  justify-content flex-start
  height 100%
  width 50vw
  position relative
  align-items center
  // background url("http://www.fudgegraphics.com/downloads/fabric/fudgegraphics-creased-fabric-10.jpg")
  background-size cover
  .customize__controls
    display flex
    flex-flow column nowrap
    justify-content space-between
    height 100%
    width 276px
    padding 0 27px
    background-blend-mode multiply
    background-color rgba(245, 245, 245, 0.80)
    .search
      width 100%
      height 30px
      margin 10px 0 calc(20px + 1vh) 0

.customize__image
  position absolute
  z-index -1
.customize__image--cloth
  height 100%
.customize__image--wear
  left 300px
  top 40px
  max-height 81%

@import "Search/Search.styl"
@import "CustomizeOrderData/OrderData.styl"

.list-container
  display flex
  position relative
  height 70%
  padding 0 4px
  &--hidden
    display none

.list
  overflow-y auto
  width 100%
  height 100%
  text-align center

.list-container > .list > .list_item
  & > .list
    padding 7px 0
  &:not(:last-child)
    margin-bottom 5px

.list_item
  display block
  & > .list
    display none
  &--opened
    & > .list
      display block
    .list_header
      transition all .3s
      color black
      .list__header_icons
        .fa-angle-double-up
          transform rotate(180deg)

.radio
  display flex
  flex-flow row nowrap
  align-items flex-start
  justify-content flex-start
  align-content center
  margin 0 !important
  position relative
  &--checked
    .radio_indicator
      background-color black
  .radio_indicator
    position relative
    display flex
    min-height 8px
    min-width 8px
    border 1px solid black
    border-radius 100%
    margin-right 5px
    top 4px
  .radio_name
    font-family font-default
    font-size 90%
    text-align left


.list_header
  width 100%
  display flex
  flex-flow row nowrap
  justify-content space-between
  align-items center
  color gray

.list__header_heading
  font-size 85%
  font-family font-bold
  text-transform uppercase
  line-height 1

.list__header_icons
  font-size 110%
  display flex
  flex-flow row nowrap
  justify-content space-between

.list__header_icons .fa
  margin 0 5px
  cursor pointer

button.items-loading
  border 1px solid black
  background white
  margin-top 10px
  padding 5px
  width 100%
  transition all .2s
  cursor pointer
  &:hover
    color white
    background black