.main
  height calc(100% - 57px - 59px);
  width 100%
  .container
    display flex
    flex-flow row nowrap
    width 100%
    height 100%

.man, .customize
  width 50vw
  height 100%
  position relative
  display flex
  align-items center
  justify-content center

.man
  position relative
  display flex
  align-items center
  justify-content center
  .preview__dummy-img
    display block
    position absolute
    top 0
    left 50%
    transform translateX(-50%)
    opacity 1
    margin auto
    height 100%

  .wearing
    position absolute
    top 0
    left 50%
    transform translateX(-50%)
    height 100%
    width 100%

    & > img
      height 100%
      position absolute
      top 0
      left 50%
      transform translateX(-50%)

.customize
  display flex
  justify-content flex-start
  height 100%

  .customize__controls
    display flex
    flex-flow column nowrap
    justify-content space-between
    height 100%
    width 276px
    padding 0 27px
    background-color bisque
    .search
      width 100%
      height 30px

@import "Search/Search.styl"

@import "CustomizeOrderData/OrderData.styl"

.list-container
  display flex
  position relative
  height 70%
  padding 0 4px
  .list
    overflow auto
    width 100%
    height 100%

    &_item
      display flex
      flex-flow row nowrap
      align-items center
      cursor pointer
      .name
        font-family font-default
        font-size 80%

      .indicator
        position relative
        display flex
        height 8px
        width 8px
        border 1px solid black
        border-radius 100%
        margin-right 5px
    .checked > .indicator
      background-color black

.controls
  display flex
  flex-flow row nowrap
  justify-content space-evenly
  align-items center
  position relative
  height 57px
  width 100%
  border-bottom 0
