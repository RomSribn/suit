.main
  height calc(100% - 57px - 59px);
  width 100%
  .container
    display flex
    flex-flow row nowrap
    width 100%
    height 100%

.customize
  display flex
  justify-content flex-start
  height 100%
  width 50vw
  height 100%
  position relative
  align-items center
  background url("http://www.fudgegraphics.com/downloads/fabric/fudgegraphics-creased-fabric-10.jpg")
  background-size cover
  .customize__controls
    display flex
    flex-flow column nowrap
    justify-content space-between
    height 100%
    width 276px
    padding 0 27px
    background-blend-mode multiply
    background-color rgba(255,255,255,0.75)
    .search
      width 100%
      height 30px
      margin 10px 0 30px 0

  @import "Search/Search.styl"
  @import "CustomizeOrderData/OrderData.styl"

.list-container
  display flex
  position relative
  height 70%
  padding 0 4px
  .list
    overflow auto
    width 100%
    height 100%

    &_item
      display flex
      flex-flow row nowrap
      align-items center
      cursor pointer
      .name
        font-family font-default
        font-size 80%

      .indicator
        position relative
        display flex
        height 8px
        width 8px
        border 1px solid black
        border-radius 100%
        margin-right 5px
    .checked > .indicator
      background-color black
