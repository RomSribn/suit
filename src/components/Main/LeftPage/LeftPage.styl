.left-page
  position relative
  display flex
  flex-flow row wrap
  align-items flex-start
  padding 3vh 4vw
  overflow auto
  .lp-block
    flex-basis 20%
    display flex
    flex-flow column nowrap
    margin-bottom 35px
    @media screen and (max-width: 1600px)
      flex-basis 25%
    @media screen and (max-width: 1366px)
      flex-basis 30%
    &_heading
      font-family font-bold
      font-size 120%
      text-transform uppercase
      color gray - 50%
      line-height 3
    & .content__list
      list-style none
      & .list__item
        position: relative
        font-size 100%
        color gray - 50%
        & .list__item-heading
          font-family font-bold
          line-height 2
          color gray - 50%
          text-transform uppercase
          font-size 80%
          position relative
          &::before
            content ''
            position absolute
            min-height 4px
            min-width 4px
            border-radius 4px
            top 50%
            left -8px
            transform translateY(-50%)
            background-color gray - 50%
        & > .list__item-container
          font-family font-default
          list-style none
          color gray - 50%
          &>.list__item-container_content
            font-size 80%
            padding 5px 0
            color gray - 50%

.pagination
  position absolute
  right 3vw
  top 4vh
  & > .page
    color gray
  .active
    color black