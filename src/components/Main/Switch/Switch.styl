.main
  & > .controls
    width 100%
    height 57px
    display flex
    flex-flow column nowrap
    justify-content space-around
    margin 0 auto
    padding 4px 0
    border-bottom 1px solid black
    z-index 10
    background-color white-transparent

    & > .disabled
      display none

    & > .mr-switcher
      padding-bottom 1px
    & > .type-switcher
      padding-top 1px

  .mr-switcher, .type-switcher
    margin 0 auto
    text-align center
    line-height 1

    & > button
      border 0
      box-shadow none
      background transparent
      text-transform uppercase
      font-family font-header
      color text-inactive
      cursor pointer

    & > button.active
      color black

  .mr-switcher_item
    font-size 120%
    padding 0 10px

  .type-switcher_item
    padding 0 10px
    font-size 90%

  .mr-switcher_divider
    font-size 120%
    border-left 1px solid text-inactive

  & > .controls
    dl.list

      div.list_item
        display inline-block
        font-family font-default
        font-size 60%
        font-weight normal
        text-transform uppercase
        color gray
        cursor pointer
        &--active
          color black

      div.list_item:not(:last-child)::after
        margin 0 4px
        content '/'

      dt.list_item-title, dd.list_item-data
        display inline-block

      dt.list_item-title
        &::after
          content ':'
          margin-right 2px