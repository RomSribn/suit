.spinner
    &__wrapper
        position fixed
        top 0
        left 0
        display flex
        flex-direction column
        justify-content center
        align-items center
        height 100%
        width 100%
        background #fff
        z-index 6

    width 6.6666rem
    height 3px
    display flex

    .line
        fill none
        stroke #b7b7b7
        stroke-width 3px

        &--static, &--animated
            stroke #000
            stroke-width 3px
            
        &--animated
            animation spin 1s infinite
            animation-timing-function linear
            stroke-dasharray 55% 100%

.spinner-linear
    width 6.6666rem
    position relative
    overflow hidden

    .line
        position absolute
        top 0 
        left 0
        background-color #b7b7b7
        height 2px
        width 100%

        &--2
            background-color #000
            left -100%

@keyframes spin
    0%   { stroke-dashoffset: 0 }
    100% { stroke-dashoffset: -155% }