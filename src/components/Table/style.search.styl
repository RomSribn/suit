.search
    flex-grow 1
    height 100%
    z-index 4

    &__control
        display flex
        position relative
        background #fff

    &__icon
        position absolute
        width 1.07rem
        height 1.07rem
        transform translateY(-50%)
        left 0.933rem
        top 50%
        background-image url(/assets/img/search.png)
        background-repeat no-repeat
        background-size contain

    &__input
        width 100%
        padding 0  0.4rem 0 2.867rem
        border 0
        outline none

        &.active
            background-color #f5f5f5

    &__clear
        position absolute
        top 0
        right 0
        width 4rem
        height 100%
        cursor pointer
        visibility hidden

    &__list
        position absolute
        top 0
        left 0
        width 100%
        padding-top 2.3rem
        padding-bottom 2.3rem
        margin-top 1px
        background-color #f5f5f5
        opacity 0
        visibility hidden
        z-index 3
        transition .35s ease

        &.active
            top 100%
            opacity 1
            visibility visible

    &__hint
        padding 0.4rem 0 0.4rem 2.867rem
        color #8a8a8a

        &:hover
            background rgba(236, 238, 238, 0.5)

.panel
    .search__input
        line-height 40px
        
.main__middle .panel-row .search__control {
    height: 40px;
}