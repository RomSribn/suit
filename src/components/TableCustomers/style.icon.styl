.icon
    &-close
        padding 0
        font-size 0
        background 0 0
        border 0

        &:after,
        &:before
            content ""
            position absolute
            top 50%
            left 50%
            width 1.3333rem
            height 2px
            background-color #b0b0b0
            transform-origin 50% 50%

        &:after
            transform translateX(-50%) rotate3d(0,0,1,-45deg)

        &:before
            transform translateX(-50%) rotate3d(0,0,1,45deg)
