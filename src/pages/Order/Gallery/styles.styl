.gallery
    padding 1.3333rem 0 0 0
    display flex
    width 100%
    height 94.5%
    flex-direction column
    align-items flex-start
    justify-content flex-start
    align-content stretch

    &__img
        border 1px solid #eceeee
        display inline-block
        position relative
        overflow hidden
        height 100%
        vertical-align: top
        background-color rgba(255, 255,255, 0.5)
        margin: 0 5px 0 0
        .image
            height 100%
            width 100%

    & &__item
        background-color rgba(255, 255,255, 0.5)

        &-blc
            display inline-block
            flex-grow 1
            width 100%

    &__bar
        display inline-block
        height 100%
        width 100%
        overflow-y auto

        &-wrapper
            height: 100%;
            display: inline-block

        &-cont
            display grid
            grid-gap 3px
            grid-template-columns calc(33.333% - 2px) calc(33.333% - 2px) calc(33.333% - 2px)

    &__prev
        &-wrap
            width 100%
            position relative

        &-blc
            display flex
            align-items stretch
            align-content stretch
            justify-content space-between
            height 100%
            width 100%
            overflow hidden

media-gallery-image-size(minWidth, imageHeight)
    @media only screen and (min-width: minWidth)
        .gallery
            &__img
                height imageHeight !important

            &__bar-wrapper
                height 'calc(%s - %s  - %s)' % (100% 10px imageHeight) // Выставляем остаточную высоту от всего блока, после .gallery__img


html[orientation="landscape"]
    .gallery
        &__img
            display inline-block

        &__bar-cont
            grid-gap 6px
            grid-template-columns calc(50% - 3px) calc(50% - 3px)


    @media only screen and (max-width 1680px) and (max-height 1366px)
        .gallery
            &__img
                display none

            &__bar-cont
                grid-gap 4px
                grid-template-columns calc(25% - 3px) calc(25% - 3px) calc(25% - 3px) calc(25% - 3px)

    @media only screen and (max-width 667px) and (max-height 375px)
        .gallery
            &__img
                display inline-block

            &__bar-cont
                grid-gap 6px
                grid-template-columns calc(50% - 3px) calc(50% - 3px)

    @media only screen and (max-width 568px) and (max-height 320px)
        .gallery
            &__img
                display none

            &__bar-cont
                grid-gap 3px
                grid-template-columns calc(33.333% - 2px) calc(33.333% - 2px) calc(33.333% - 2px)

html[orientation="portrait"]
    .gallery
        &__img
            display block
            height unset
            margin 0 auto 10px auto

        &__bar
            &-wrapper
                width 100% !important
                    padding-bottom: 1rem;

            &-cont
                grid-gap 4px
                grid-template-columns calc(25% - 4px) calc(25% - 4px) calc(25% - 4px) calc(25% - 4px)

    @media only screen and (max-width 768px) and (max-height 1024px)
        .gallery
            &__bar-cont
                grid-gap 6px
                grid-template-columns calc(50% - 3px) calc(50% - 3px)

    @media only screen and (max-width 370px) and (max-height 731px)
        .gallery
            &__img
                display none

            &__bar-cont
                grid-gap 6px
                grid-template-columns calc(50% - 3px) calc(50% - 3px)
