.toggle {
    display: flex;
    margin-left: auto;
    flex-shrink: 0;
}
.toggle__item {
    margin-left: 20px;
    &:first-child {
        margin-left: 0;
    }
}
.toggle__input:checked,
.toggle__input:not(:checked) {
    position: absolute;
    left: -9999px;
}
.toggle__input:checked + .toggle__label,
.toggle__input:not(:checked) + .toggle__label
{
    position: relative;
    padding-left: 18px;
    cursor: pointer;
    color: #666;
    font-size: 1rem;
    display: table-cell;
    vertical-align: middle;
}
.toggle__input:checked + .toggle__label:before,
.toggle__input:not(:checked) + .toggle__label:before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 14px;
    height: 14px;
    border: 1px solid #8a8a8a;
    border-radius: 100%;
    background: #fff;
}
.toggle__input:checked + .toggle__label:after,
.toggle__input:not(:checked) + .toggle__label:after {
    content: '';
    width: 8px;
    height: 8px;
    background: #b7b7b7;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 3px;
    border-radius: 100%;
    transition: all 0.3s ease;
}
.toggle__input:not(:checked) + .toggle__label:after {
    opacity: 0;
}
.toggle__input:checked + .toggle__label:after {
    opacity: 1;
}


@media (max-width : 1200px) {
    .toggle__input:checked + .toggle__label:before,
    .toggle__input:not(:checked) + .toggle__label:before {
        width: 1.274rem;
        height: 1.274rem;
    }
    .toggle__input:checked + .toggle__label:after,
    .toggle__input:not(:checked) + .toggle__label:after {
        width: 0.728rem;
        height: 0.728rem;
        left: 0.2728rem;
    }
}

@media (max-width: 768px) {
    .toggle {
        overflow-x: auto;
        white-space: nowrap;
        padding: 10px 0;
        margin-bottom: -10px;
    }
    .toggle-wrap {
        padding: 1rem;
        margin-bottom: 0;
    }
}

@media (max-width: 450px) {
    .toggle__input:checked + .toggle__label,
    .toggle__input:not(:checked) + .toggle__label {
        padding-left: 20px;
    }

    .toggle-wrap.toggle {
        padding: 1rem;
        margin-bottom: 0;

    }
}
