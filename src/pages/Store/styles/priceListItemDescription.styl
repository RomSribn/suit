.price-list-item--description
    height 100%
    background-color #fff
    padding 2rem 2rem 55px 2rem
    padding 10px
    @media only screen and (min-width: 450px) and (min-height: 450px)
        padding 2rem 2rem 55px 2rem
    span.button-bar 
        display block
        position absolute
        bottom 0
        left -10%
        min-height 71px
        width 120%
        background black
        @media only screen and (min-width: 450px) and (min-height: 450px)
            position static
            width auto
            bottom 51px
            right 4.5rem
            background transparent
        button 
            width auto
            padding 0 1rem
            margin-top 1rem
            margin-left: auto;
            color #fff
            background-color transparent
            &.approve-button.black:hover
                background-color #000
                border-color #000
                color #fff
            @media only screen and (min-width: 450px) and (min-height: 450px)
                background-color #000
                &.approve-button.black:hover
                    background: #eceeee;
                    border-color: #eceeee;
                    color: #000;
    @media only screen and (min-width: 768px)
        padding 2rem 2rem 62px 2rem
    .close-popup
        position fixed
        font-size 10pt
        font-weight bold
        padding 10px
        right 0
        top 0
        transform scaleX(1.3)
        cursor pointer
    @media only screen and (min-width: 450px) and (min-height: 450px)
        width 40%
        margin-left 2rem

        