.price-list-item--description
    height 100%
    background-color #fff
    padding 2rem 2rem 55px 2rem
    span.button-bar 
        @media only screen and (min-width: 768px)
            bottom 51px
            right 4.5rem
        button 
            width auto
            padding 0 1rem
            margin-top 1rem
            margin-left: auto;
    @media only screen and (min-width: 768px)
        padding 2rem 2rem 62px 2rem
    .close-popup
        position fixed
        font-size 10pt
        font-weight bold
        padding 10px
        right 0
        top 0
        transform scaleX(1.3)
        cursor pointer
    @media only screen and (min-width: 450px) and (min-height: 450px)
        width 40%
        margin-left 2rem

        